@using ticaretotomasyonu.Models.sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri-Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.FaturaSeriNo @k.FaturaSıraNo</td>
    <td>@Convert.ToDateTime(k.Tarih).ToString("dd/MM/yyyy")</td>
    <td>@k.Saat</td>
    <td>@k.Toplam ₺</td>
    <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:lightcoral; color:white;">Detaylar</a></td>
</tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br/><br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#modal1">Popup Penceresi</button>
<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="model-title"> Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table-responsive table-bordered">
                    <tr>
                        <td>Seri-Sıra no</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model) {
                    <tr>
                        <td>@x.FaturaSeriNo @x.FaturaSıraNo</td>
                        <td>@x.Toplam</td>
                    </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            </div>
        </div>
    </div>
</div>
